@inherits LayoutComponentBase

<div class="flex h-screen bg-gray-100">
    <!-- Sidebar -->
    <div class="w-64 bg-gray-800 text-white flex-shrink-0">
        <NavMenu />
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col">
        <!-- Top Bar -->
        <header class="bg-white shadow-sm border-b border-gray-200 px-6 py-3">
            <div class="flex justify-between items-center">
                <div class="text-lg font-medium text-gray-900">Semantic Kernel Learning Demo</div>
                <a href="https://learn.microsoft.com/semantic-kernel/"
                   target="_blank"
                   class="text-blue-600 hover:text-blue-800 text-sm">
                    Learn More
                </a>
            </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-hidden">
            @Body
        </main>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed top-0 left-0 right-0 bg-red-500 text-white p-4 z-50 hidden">
    An unhandled error has occurred.
    <button onclick="window.location.reload()" class="bg-red-700 hover:bg-red-800 px-4 py-1 rounded ml-4">Reload</button>
    <button onclick="document.getElementById('blazor-error-ui').style.display='none'" class="ml-2 text-xl">&times;</button>
</div>
